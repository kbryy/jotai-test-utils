{
  "name": "jotai-test-utils",
  "version": "0.0.1",
  "description": "Jotai用のテストユーティリティ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src",
    "check": "biome check ./src",
    "test": "vitest run"
  },
  "keywords": ["jotai", "testing", "react", "test-utils"],
  "author": "kbryy",
  "license": "MIT",
  "packageManager": "pnpm@10.9.0",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "jotai": "^2.12.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
